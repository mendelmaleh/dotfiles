# vim: ft=conf

include ./iceberg.conf
include ./inputs.conf

# launch alacritty on start
set $term alacritty
exec $term -e bash -c "pfetch; bash"

include ./keybinds.conf

# apps
for_window {
    [app_id="chrom*"] move container to workspace 3, focus
    [app_id="firefox*"] move container to workspace 3, focus
    [app_id="qutebrowser*"] move container to workspace 3, focus
    [app_id="vimb*"] move container to workspace 3, layout tabbed, focus
    [app_id="telegram*"] move container to workspace 4, focus
    [app_id="zathura*"] move container to workspace 4, focus
}

include hosts/`hostname`.conf
include /etc/sway/config.d/*
